@model MsStateGuides.Models.LibGuidesModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main">


    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0">
        <thead>
            <tr>
                <th scope="col" class="text-left">Guid</th>
                <th scope="col" class="text-left" width="15%">Guid Type</th>

                <th scope="col" class="text-left">Owner</th>
                <th scope="col" class="text-left">Status</th>
                <th width="10%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LibGuides)
            {
            <tr>
                <td>
                    <a   title=@item.Description id=@item.Id onclick="">@item.Name</a>
                    
                    @*<span class="text-left">@item.Name</span>*@
                </td>
                <td class="text-left">@item.Type_label</td>

                <td>
                    <a href="https://guides.library.msstate.edu/prf.php?account_id=@item.Owner_id" target="_blank"> <span class="text-left">@item.Owner.FullName</span></a>

                </td>
                <td class="text-left">@item.Status_label</td>
                <td class="text-right">
                    <a href="@item.FriendlyUrl" class="tooltiped" target="_blank" data-toggle="tooltip" data-placement="top" title="View Details">
                        <img width="25" src="data:image/svg+xml;utf8;base64,">
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
      

    </script>
}
